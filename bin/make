FILE=$DOCKER_HOME/images/$1.mk
if [ ! -e $FILE ]; then
    DELETE=true
    FILE="$(mktemp)"
    cat <<- EOF > $FILE
        include \$(DOCKER_HOME)/build/Makefile
        NAME = $1
        VERSION = latest
        build: prepare $1
EOF
fi
make -f $FILE build
CODE=$?
if [ ! -z ${DELETE+x} ]; then    
    rm $FILE
fi
exit $CODE